@model rssreader.Models.Entities.Feed
@{
    ViewBag.Title = "Add";
    Layout = null;
}

@using (Ajax.BeginForm("Add", "Index",new AjaxOptions() {OnBegin = "addFeedLoader",HttpMethod = "POST", UpdateTargetId = "content", InsertionMode = InsertionMode.Replace }, new { @class = "form-inline" }))
{
    <div class="form-group">
        @Html.EditorFor(m => m.Url, new { htmlAttributes = new { @class = "form-control", placeholder = "Url feedu" } })
    </div>
    <button class="btn btn-primary"><i class="fa fa-plus"></i></button>
    <i class="fa fa-spinner fa-spin fa-fw margin-bottom hidden" id="add-feed-loader"></i>
}